//

#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
const ll mod=998244353;
const ll N=2e5+100;
ll x[N];
ll ksm(ll a,ll b) {
	ll k=1;
	while(b) {
		if(b&1)
			k=k*a%mod;
		a=a*a%mod;
		b/=2;
	}
	return k;
}
ll C(ll a,ll b){
	return (x[a]%mod)*(ksm(x[b]*x[a-b]%mod,mod-2))%mod;
}
int main(){
	ll n,m,i;
	x[0]=x[1]=1;
	for(i=2; i<N; i++)
		x[i]=x[i-1]*i%mod;
	scanf("%lld%lld",&n,&m);
	if(n==2) puts("0");
	else printf("%lld",C(m,n-1)*(n-2)%mod*ksm(2,n-3)%mod);
}
