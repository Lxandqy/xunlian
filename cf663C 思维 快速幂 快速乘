//这道题想到了单峰解决但是还是略慌了；

#include<iostream>
using namespace std;
const int mod = 1e9 + 7;
typedef long long ll;
ll kuaisucheng(ll x, ll y){
	ll ans = 0;
	while(y){
		if(y & 1){
			ans = (ans + x) % mod;
		}
		y >>= 1;
		x = (x + x) % mod;
	}
	return ans;
}
ll kuaisumi(ll x,ll y){
	ll ans = 1;
	while(y){
		if(y & 1){
			ans = (ans * x) % mod;
		}
		y >>= 1;
		x = (x * x) % mod;
	}
	return ans;
}
int main(){
	int n;
	cin >> n;
	ll sum = 0;
	ll k = 1;
	sum = kuaisumi(2,n - 1);
	for(int i = n; i >= 1; i--){
		k = kuaisucheng(k,i) % mod;
	}
	ll s = k - sum;
	if(s < 0) s += mod;
	printf("%lld\n",s);
	return 0;
}
