
#include<iostream>
#include<cstring>

using namespace std;
const int N = 5e5 + 10;
int a[N],b[N],d[N],n,m;

int solve(int x,int y){
	int len = 1;
	d[1] = a[x];
	for(int i = x + 1; i <= y - 1; i++){
		int l = 0,r = len;
		while(l < r){
			int mid = l + r + 1 >> 1;
			if(d[mid] > a[i]){
				r = mid - 1;
			}else l = mid;
		}
		if(r != 0) d[r + 1] = a[i];
		len = max(len,r + 1);
	}
	int l = 0,r = len;
	while(l < r){
		int mid = l + r + 1 >> 1;
		if(d[mid] > a[y]){
			r = mid - 1;
		}else l = mid;
	}
	if(r != 0) d[r + 1] = a[y];
	len = r + 1;
	return y - x - len + 1;
}

int main(){
	scanf("%d%d",&n,&m);
	for(int i = 1; i <= n; i++){
		scanf("%d",&a[i]);
		a[i] -= i;
	}
		
	for(int i = 1; i <= m; i++)
		scanf("%d",&b[i]);
		
	b[0] = 0,b[m + 1] = n + 1;
	a[0] = -0x3f3f3f3f,a[n + 1] = 0x3f3f3f3f;
	
	for(int i = 2; i <= m; i++){
		if(a[b[i]] < a[b[i - 1]]){
			printf("-1\n");
			return 0;
		}
	}
	
	int sum = 0;
	for(int i = 1; i <= m + 1; i++){
		sum += solve(b[i - 1],b[i]);
	}
	
	printf("%d\n",sum) ;
	
	
	return 0;
}
